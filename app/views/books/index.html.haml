= actions do
  = link_to "Agregar libro", new_book_path

%h1 Libros disponibles en biblioteca

%table#library-table.list
  %thead
    %tr
      %th Título
      %th Autor
      %th Código
      %th Edición
      %th Año
      = actions do
        %th
          Acciones
  %tbody
    - present(@books).each do |book|
      %tr
        %td= book.title
        %td= book.author
        %td= book.code
        %td= book.edition
        %td= book.year
        = actions do
          %td
            = link_to "Editar", edit_book_path(book)

%br
%br
= actions do
  = link_to "Agregar libro", new_book_path
= actions do
  = form_tag load_books_path, multipart: true do
    = label :csv, "Archivo CSV"
    = file_field_tag :csv, accept: "text/csv"
    %p= submit_tag "Importar"
