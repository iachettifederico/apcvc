- if news_item.is_a?(NewsItem)
  %hr/
  .news_item
    %h2= news_item.title
    .event_date
      Publicado: #{news_item.pubdate.strftime("%d/%m/%Y")}
    .news_item_body
      = news_item.body
- elsif news_item.is_a?(Event)
  - if news_item.poster.present?
    %hr/
    .event
      %h2= news_item.title
      .event_date
        Fecha del evento: #{news_item.date.strftime("%d/%m/%Y")}
      = image_tag news_item.poster_url, class: :event_image
  - else
    %hr/
    .event
      %h2= news_item.title
      .event_date
        Fecha del evento: #{news_item.date.strftime("%d/%m/%Y")}
      %div
        = news_item.content.html_safe

= link_to 'New Announcement', new_announcement_path
